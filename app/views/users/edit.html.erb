
 <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
       <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
       <% end %>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
         <label for="inputTitle">Name</label><br>
         <%= f.text_field :name, autofocus: true%>
        </div>
        <div class="form-group">
         <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        <div class="form-group">
         <label for="inputOpinion"></label>Introduction<br>
         <%= f.text_area :introduction %>
        </div>
        <%= f.submit "Update User" ,class: "btn btn-secondary" %>

      <% end %>
  </div>
</div>
